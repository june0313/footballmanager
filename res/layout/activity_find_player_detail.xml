<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:background="@color/lightgray"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="@dimen/divider" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="팀 이름"
                android:textColor="@color/team_name"
                android:textSize="18sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/team_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="팀 지역 / 홈 구장 / 나이대.."
            android:textColor="#888888"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_flat_button"
                android:scaleType="center"
                android:src="@drawable/call" />

            <ImageButton
                android:id="@+id/sms"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_flat_button"
                android:src="@drawable/mailto" />

            <ImageButton
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_flat_button"
                android:src="@drawable/info" />

        </LinearLayout>
        
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightgray" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding"
            android:orientation="vertical" >
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/divider"
                android:text="모집하는 선수 정보"
                android:textColor="@color/darkgray" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/divider"
                android:text="활동 지역"
                android:textColor="@color/darkgray" />
            
            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/shadow_textview"
                android:gravity="right"
                android:textSize="@dimen/major_font"
                android:textColor="@color/darkgray"
                android:text="경기 김포시 대곶면" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/divider"
                    android:orientation="vertical" >
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/divider"
                        android:text="포지션"
                        android:textColor="@color/darkgray" />
                    
                    <TextView
                        android:id="@+id/position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/shadow_textview"
                        android:gravity="right"
                        android:text="LM"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/major_font" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/divider"
                        android:text="연령대"
                        android:textColor="@color/darkgray" />
                    
                    <TextView
                        android:id="@+id/ages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/shadow_textview"
                        android:gravity="right"
                        android:text="20대"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/major_font" />
                    
                </LinearLayout>

            </LinearLayout>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/divider"
                android:text="내용"
                android:textColor="@color/darkgray" />
            
            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/divider"
                android:background="@drawable/shadow_textview"
                android:padding="@dimen/textView_padding"
                android:minLines="5"
                android:textSize="@dimen/major_font"
                android:textColor="@color/darkgray"
                android:hint="내용이 입력되지 않았습니다." />
            
        </LinearLayout>
        
	</ScrollView>
    

</LinearLayout>
