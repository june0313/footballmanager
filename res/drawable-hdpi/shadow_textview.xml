<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#cfcfcf" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <item
        android:bottom="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />

            <padding
                android:bottom="@dimen/textView_padding"
                android:left="@dimen/textView_padding"
                android:right="@dimen/textView_padding"
                android:top="@dimen/textView_padding" />
            
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>
