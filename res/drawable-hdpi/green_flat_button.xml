<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#b7db4c" />
            <stroke
                android:width="1dp"
                android:color="#b7db4c" />

            <padding
                android:left="5dp"
                android:top="3dp"
                android:right="5dp"
                android:bottom="3dp" />
        </shape>
    </item>
    <item>
        <shape>
           	<solid
                android:color="@color/main" />
            <stroke
                android:width="1dp"
                android:color="@color/main" />

            <padding
                android:left="5dp"
                android:top="3dp"
                android:right="5dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>
