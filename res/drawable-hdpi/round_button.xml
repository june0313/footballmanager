<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#bababa" />
            <stroke
                android:width="1dp"
                android:color="#bababa" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="4dp"
                android:right="5dp"
                android:bottom="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#bababa"
                android:endColor="#979797"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#979797" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="4dp"
                android:right="5dp"
                android:bottom="4dp" />
        </shape>
    </item>
</selector>
